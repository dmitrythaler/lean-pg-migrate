{
  "name": "lean-pg-migrate",
  "version": "0.6.0",
  "description": "PostgreSQL simple migration tool",
  "author": "Dmitry Thaler <dmitry@thaler.dev>",
  "license": "MIT",
  "type": "module",
  "main": "lpgm.js",
  "types": "lpgm.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/dmitrythaler/lean-pg-migrate.git"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test:pg:start": "docker run -p 5432:5432 --name lpgm-test-tmp --rm -e POSTGRES_PASSWORD=testerwashere -d postgres:latest",
    "test:pg:stop": "docker stop lpgm-test-tmp",
    "test": "jest --forceExit --detectOpenHandles --runInBand --bail=1",
    "test:pg:exec": "yarn test:pg:start && yarn test; yarn test:pg:stop"
  },
  "bin": {
    "lpgm": "./index.js"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "postgres",
    "postgresql",
    "pg-promise",
    "migration",
    "typescript",
    "ts"
  ],
  "dependencies": {
    "commander": "^9.0.0",
    "dotenv": "^16.0.0",
    "pg-monitor": "^1.4.1",
    "pg-promise": "^10.11.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 60000,
    "coverageReporters": [
      "json-summary"
    ],
    "testMatch": [
      "<rootDir>/test/(*.)spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
